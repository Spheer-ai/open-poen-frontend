{
  "name": "open_poen_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clear-cache": "rm -rf .vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite preview",
    "deploy-dev": "cross-env VITE_APP_ENV=development vite build --mode development --debug",
    "deploy-prod": "cross-env VITE_APP_ENV=production vite build --mode production --debug",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'"
  },
  "dependencies": {
    "@formatjs/intl": "^2.9.3",
    "@formatjs/intl-pluralrules": "^5.2.6",
    "@formatjs/intl-relativetimeformat": "^11.2.6",
    "@types/react-transition-group": "^4.4.7",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "jwt-decode": "^3.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.7",
    "react-responsive": "^9.0.2",
    "react-router-dom": "^6.16.0",
    "react-spring": "^9.7.3",
    "react-tooltip": "^5.21.5",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-tooltip": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-react": "^4.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "tsc --noEmit"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
